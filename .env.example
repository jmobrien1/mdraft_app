# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this
FLASK_DEBUG=1
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///mdraft_local.db
# For production: DATABASE_URL=postgresql://username:password@/database_name?host=/cloudsql/project:region:instance

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Google Cloud Storage
GCS_BUCKET_NAME=mdraft-uploads
GCS_PROCESSED_BUCKET_NAME=mdraft-processed

# Google Cloud Tasks
CLOUD_TASKS_QUEUE_NAME=mdraft-conversion-queue
CLOUD_TASKS_LOCATION=us-central1

# Worker Service Configuration
WORKER_SERVICE=false
WORKER_SERVICE_URL=https://mdraft-worker-xxxxx-uc.a.run.app
WORKER_INVOKER_SA_EMAIL=mdraft-invoker@your-project-id.iam.gserviceaccount.com

# Google Document AI
DOCAI_PROCESSOR_ID=projects/your-project-id/locations/us/processors/your-processor-id
DOCAI_LOCATION=us

# Rate Limiting
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO

# Feature Flags
PRO_CONVERSION_ENABLED=true
