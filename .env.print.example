# Core Flask Configuration
FLASK_APP=run.py
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here
PORT=5000

# Database Configuration
DATABASE_URL=your-database-url-here
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Google Cloud Storage
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_PROCESSED_BUCKET_NAME=your-gcs-processed-bucket-name

# Google Cloud Tasks
CLOUD_TASKS_QUEUE_ID=your-cloud-tasks-queue-id
CLOUD_TASKS_QUEUE_NAME=your-cloud-tasks-queue-name
CLOUD_TASKS_LOCATION=us-central1

# Google Document AI
DOCAI_PROCESSOR_ID=your-docai-processor-id
DOCAI_LOCATION=us

# Celery Configuration
CELERY_BROKER_URL=your-celery-broker-url
CELERY_RESULT_BACKEND=your-celery-result-backend

# Rate Limiting
CONVERT_RATE_LIMIT_DEFAULT=20 per minute
AI_RATE_LIMIT_DEFAULT=10 per minute
LIST_RATE_LIMIT=240 per minute

# Application Settings
MDRAFT_DEV_STUB=0
MDRAFT_PUBLIC_MODE=0
MDRAFT_CHUNK_SIZE_CHARS=3000
MDRAFT_MAX_CHUNKS=12
MDRAFT_TRUNCATE_CHARS=200000
MDRAFT_MAX_MERGED_ITEMS=300
MDRAFT_MAX_TOKENS=700
MDRAFT_RELAX_MAX_OBJS_PER_CHUNK=80
MATRIX_WINDOW_SIZE=12
MATRIX_MAX_TOTAL_CHUNKS=500

# File Processing
MAX_UPLOAD_MB=10
RETENTION_DAYS=30
PRICING_DOC_OCR_PER_PAGE_USD=0

# Queue and Processing
QUEUE_MODE=sync
USE_GCS=0
WORKER_SERVICE=false

# Billing (Stripe)
BILLING_ENABLED=0
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PRICE_PRO=your-stripe-price-pro
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Testing
TEST_BASE_URL=http://localhost:5000
BASE_URL=https://mdraft-web.onrender.com
